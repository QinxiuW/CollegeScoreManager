<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qinxiu.patterson.mapper.IStudentMapper">
  <resultMap id="BaseResultMap" type="com.qinxiu.patterson.domain.Student">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="surname" jdbcType="VARCHAR" property="surname" />
  </resultMap>

  <resultMap id="s_q" type="com.qinxiu.patterson.domain.Student">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="surname" jdbcType="VARCHAR" property="surname" />
    <collection property="qualifications" column="id"
      select="com.qinxiu.patterson.mapper.IQualificationMapper.selectByStudentId"/>
  </resultMap>

  <select id="selectLinkById" resultMap="s_q">
    select *
    from tb_student
    where id = #{id}
  </select>
</mapper>
